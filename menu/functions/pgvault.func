## Clear output text for n lines (arg $1)
clear_lines() {
    for (( i=1; i <= $(($1)); i++ ));do
        tput cuu1
        tput el
    done
}

## Change text in n lines above (arg $1) with string (arg $2)
change_line_text() {
    tput sc
    for (( i=1; i <= $(($1)); i++ ));do
        tput cuu1
    done
    tput el
    echo -e $2
    tput rc
}
